<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <title>Đổi mật khẩu</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <style>
      .strength-bar {
        height: 6px;
        border-radius: 4px;
        margin-top: 4px;
      }
      .weak {
        background: red;
        width: 33%;
      }
      .medium {
        background: orange;
        width: 66%;
      }
      .strong {
        background: green;
        width: 100%;
      }
      .rule {
        font-size: 0.9em;
      }
      .rule.valid {
        color: green;
      }
      .rule.invalid {
        color: red;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary">Đổi mật khẩu</h3>
        <div class="dropdown">
          <button
            class="btn btn-outline-dark dropdown-toggle"
            data-bs-toggle="dropdown"
          >
            <i class="bi bi-person-circle"></i> <%= currentUser.username %> (<%=
            currentUser.role %>)
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <% if (currentUser && currentUser.role === 'admin') { %>
            <li>
              <a class="dropdown-item" href="/printers">
                <i class="bi bi-printer me-2"></i>Quản lý máy in
              </a>
            </li>
            <li>
              <a class="dropdown-item" href="/users">
                <i class="bi bi-people me-2"></i>Quản lý người dùng</a
              >
            </li>
            <li>
              <a class="dropdown-item" href="/departments">
                <i class="bi bi-building-gear me-2"></i> Quản lý bộ phận
              </a>
            </li>
            <% } else { %>
            <li>
              <a class="dropdown-item" href="/printers">
                <i class="bi bi-arrow-left-circle me-2"></i>Quay lại</a
              >
            </li>
            <% } %>
            <li>
              <a class="dropdown-item text-danger" href="/logout">
                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
              </a>
            </li>
          </ul>
        </div>
      </div>

      <% if (currentUser) { %>
      <p class="text-muted">
        Tài khoản: <strong><%= currentUser.username %></strong>
      </p>
      <% } %> <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
      <% } %> <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
      <% } %>

      <div class="card shadow-sm">
        <div class="card-body">
          <form
            method="POST"
            action="/change-password"
            class="row g-3"
            id="changeForm"
          >
            <!-- Mật khẩu cũ -->
            <div class="col-12">
              <label class="form-label">Mật khẩu cũ</label>
              <div class="input-group">
                <input
                  id="oldPassword"
                  name="oldPassword"
                  type="password"
                  class="form-control"
                  required
                />
                <button
                  type="button"
                  class="btn btn-outline-secondary toggle-password"
                  data-target="oldPassword"
                >
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>

            <!-- Mật khẩu mới -->
            <div class="col-md-6">
              <label class="form-label">Mật khẩu mới</label>
              <div class="input-group">
                <input
                  id="newPassword"
                  name="newPassword"
                  type="password"
                  class="form-control"
                  minlength="6"
                  required
                  data-bs-toggle="tooltip"
                  title="Mật khẩu nên có: chữ hoa, số, ký tự đặc biệt"
                />
                <button
                  type="button"
                  class="btn btn-outline-secondary toggle-password"
                  data-target="newPassword"
                >
                  <i class="bi bi-eye"></i>
                </button>
              </div>
              <div id="strengthText" class="form-text"></div>
              <div id="strengthBar" class="strength-bar"></div>

              <!-- Checklist yêu cầu -->
              <ul class="mt-2 mb-0 ps-3">
                <li id="rule-length" class="rule invalid">Tối thiểu 6 ký tự</li>
                <li id="rule-upper" class="rule invalid">
                  Ít nhất 1 chữ hoa (A-Z)
                </li>
                <li id="rule-number" class="rule invalid">
                  Ít nhất 1 chữ số (0-9)
                </li>
                <li id="rule-special" class="rule invalid">
                  Ít nhất 1 ký tự đặc biệt (!@#$...)
                </li>
              </ul>
            </div>

            <!-- Xác nhận mật khẩu mới -->
            <div class="col-md-6">
              <label class="form-label">Xác nhận mật khẩu mới</label>
              <div class="input-group">
                <input
                  id="confirmPassword"
                  name="confirmPassword"
                  type="password"
                  class="form-control"
                  minlength="6"
                  required
                />
                <button
                  type="button"
                  class="btn btn-outline-secondary toggle-password"
                  data-target="confirmPassword"
                >
                  <i class="bi bi-eye"></i>
                </button>
              </div>
              <div id="matchMessage" class="form-text"></div>
            </div>

            <!-- Submit -->
            <div class="col-12">
              <button class="btn bg-primary text-white">Lưu thay đổi</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const newPassword = document.getElementById("newPassword");
      const confirmPassword = document.getElementById("confirmPassword");
      const matchMessage = document.getElementById("matchMessage");
      const strengthText = document.getElementById("strengthText");
      const strengthBar = document.getElementById("strengthBar");

      const ruleLength = document.getElementById("rule-length");
      const ruleUpper = document.getElementById("rule-upper");
      const ruleNumber = document.getElementById("rule-number");
      const ruleSpecial = document.getElementById("rule-special");

      let allValid = false;

      // Check khớp mật khẩu
      function checkPasswordMatch() {
        if (!confirmPassword.value) {
          matchMessage.textContent = "";
          return;
        }
        if (newPassword.value === confirmPassword.value) {
          matchMessage.textContent = "✅ Mật khẩu khớp";
          matchMessage.className = "form-text text-success";
        } else {
          matchMessage.textContent = "❌ Mật khẩu không khớp";
          matchMessage.className = "form-text text-danger";
        }
      }

      // Check strength + checklist
      function checkStrength(password) {
        allValid = true;

        // Rules
        password.length >= 6 ? ruleLength.className = "rule valid" : (ruleLength.className = "rule invalid", allValid = false);
        /[A-Z]/.test(password) ? ruleUpper.className = "rule valid" : (ruleUpper.className = "rule invalid", allValid = false);
        /[0-9]/.test(password) ? ruleNumber.className = "rule valid" : (ruleNumber.className = "rule invalid", allValid = false);
        /[^A-Za-z0-9]/.test(password) ? ruleSpecial.className = "rule valid" : (ruleSpecial.className = "rule invalid", allValid = false);

        let strength = 0;
        if (password.length >= 6) strength++;
        if (/[A-Z]/.test(password)) strength++;
        if (/[0-9]/.test(password)) strength++;
        if (/[^A-Za-z0-9]/.test(password)) strength++;

        if (!password) {
          strengthText.textContent = "";
          strengthBar.className = "strength-bar";
          return;
        }

        if (strength <= 1) {
          strengthText.textContent = "Độ mạnh: Yếu";
          strengthText.className = "form-text text-danger";
          strengthBar.className = "strength-bar weak";
        } else if (strength === 2 || strength === 3) {
          strengthText.textContent = "Độ mạnh: Trung bình";
          strengthText.className = "form-text text-warning";
          strengthBar.className = "strength-bar medium";
        } else {
          strengthText.textContent = "Độ mạnh: Mạnh";
          strengthText.className = "form-text text-success";
          strengthBar.className = "strength-bar strong";
        }
      }

      newPassword.addEventListener("input", () => {
        checkPasswordMatch();
        checkStrength(newPassword.value);
      });
      confirmPassword.addEventListener("input", checkPasswordMatch);

      // Chặn submit nếu chưa đạt yêu cầu
      document.getElementById("changeForm").addEventListener("submit", function(e) {
        checkStrength(newPassword.value);
        checkPasswordMatch();
        if (!allValid || newPassword.value !== confirmPassword.value) {
          e.preventDefault();
          alert("❌ Mật khẩu chưa đạt yêu cầu hoặc xác nhận không khớp!");
        }
      });

      // Toggle password visibility
      document.querySelectorAll(".toggle-password").forEach(btn => {
        btn.addEventListener("click", () => {
          const targetId = btn.getAttribute("data-target");
          const input = document.getElementById(targetId);
          const icon = btn.querySelector("i");
          if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("bi-eye", "bi-eye-slash");
          } else {
            input.type = "password";
            icon.classList.replace("bi-eye-slash", "bi-eye");
          }
        });
      });

      // Reset sau khi thành công
      <% if (success) { %>
        document.getElementById("changeForm").reset();
        matchMessage.textContent = "";
        strengthText.textContent = "";
        strengthBar.className = "strength-bar";
        [ruleLength, ruleUpper, ruleNumber, ruleSpecial].forEach(r => r.className = "rule invalid");
      <% } %>

      // Tooltip bootstrap
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    </script>
  </body>
</html>
