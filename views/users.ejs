      <!-- B·ªô l·ªçc & t√¨m ki·∫øm -->
      <div class="card-body p-2">
        <div class="row g-3 mb-3">
          <div class="col-md-6">
            <input
              type="text"
              id="searchInput"
              class="form-control"
