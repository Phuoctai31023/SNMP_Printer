                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="id" id="editId" />
              <div class="mb-3">
                <label class="form-label">T√™n b·ªô ph·∫≠n</label>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  id="editName"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">M√¥ t·∫£</label>
                <input
                  type="text"
                  class="form-control"
                  name="description"
                  id="editDescription"
                />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                ƒê√≥ng
              </button>
              <button
                type="submit"
                class="btn btn-warning"
                onclick="showLoading()"
              >
                L∆∞u thay ƒë·ªïi
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Scripts -->
    <script>
      function showLoading() {
        const ov = document.getElementById("loadingOverlay");
        if (ov) ov.style.display = "flex";
      }

      // Alert hi·ªÉn th·ªã l·ªói/th√†nh c√¥ng (gi·ªØ gi·ªëng users.ejs)
      const params = new URLSearchParams(window.location.search);
      const error = params.get("error");
      const success = params.get("success");

      if (error) {
        Swal.fire({
          icon: "error",
          title: "L·ªói",
          text: decodeURIComponent(error),
          confirmButtonColor: "#d33",
        }).then(() =>
          window.history.replaceState(
            {},
            document.title,
            window.location.pathname
          )
        );
      }
      if (success) {
        Swal.fire({
          icon: "success",
          title: "Th√†nh c√¥ng",
          text: decodeURIComponent(success),
          confirmButtonColor: "#28a745",
        }).then(() =>
          window.history.replaceState(
            {},
            document.title,
            window.location.pathname
          )
        );
      }

      // Sort table (gi·ªëng users.ejs)
      let sortDirections = {};
      function sortTable(colIndex, headerEl) {
        const table = document.getElementById("deptTable");
        const tbody = table.querySelector("tbody");
        const rows = Array.from(tbody.querySelectorAll("tr")).filter((r) =>
          r.querySelector("td")
        );
        sortDirections[colIndex] = !sortDirections[colIndex];
        rows.sort((a, b) => {
          let cellA = a.children[colIndex].innerText.trim();
          let cellB = b.children[colIndex].innerText.trim();
          return sortDirections[colIndex]
            ? cellA.localeCompare(cellB, "vi", { sensitivity: "base" })
            : cellB.localeCompare(cellA, "vi", { sensitivity: "base" });
        });
        tbody.innerHTML = "";
        rows.forEach((r) => tbody.appendChild(r));

        document
          .querySelectorAll("th")
          .forEach((th) => th.classList.remove("active-sort"));
        document
          .querySelectorAll("td")
          .forEach((td) => td.classList.remove("highlight"));
        document
          .querySelectorAll("th i")
          .forEach((icon) => (icon.className = "bi bi-arrow-down-up"));

        const icon = headerEl.querySelector("i");
        icon.className = sortDirections[colIndex]
          ? "bi bi-arrow-up"
          : "bi bi-arrow-down";
        headerEl.classList.add("active-sort");

        tbody.querySelectorAll("tr").forEach((row) => {
          row.children[colIndex] &&
            row.children[colIndex].classList.add("highlight");
        });
      }

      // Filter + pagination logic (same structure as users.ejs)
      let originalRows = [];
      let currentPage = 1;
      let rowsPerPage = 10;

      function filterTable() {
        let search = document.getElementById("searchInput").value.toLowerCase();

        let filtered = originalRows.filter((row) => {
          if (!row.querySelector("td")) return false;
          let cells = row.getElementsByTagName("td");
          let name = (cells[0].innerText || "").toLowerCase();
          let desc = (cells[1].innerText || "").toLowerCase();

          let matchesSearch = name.includes(search) || desc.includes(search);

          return matchesSearch;
        });

        renderTable(filtered);
      }

      function renderTable(filtered) {
        let tbody = document.getElementById("deptBody");
        document.getElementById("totalItems").innerText = filtered.length;

        let totalPages = Math.ceil(filtered.length / rowsPerPage) || 1;
        if (currentPage > totalPages) currentPage = 1;
        let start = (currentPage - 1) * rowsPerPage;
        let end = start + rowsPerPage;

        document.getElementById("currentRange").innerText =
          filtered.length > 0
            ? `${start + 1}-${Math.min(end, filtered.length)}`
            : "0-0";

        tbody.innerHTML = "";
        if (filtered.length === 0) {
          tbody.innerHTML = `<tr><td colspan="5" class="text-center text-muted">Kh√¥ng c√≥ b·ªô ph·∫≠n</td></tr>`;
        } else {
          filtered.slice(start, end).forEach((row) => tbody.appendChild(row));
        }

        renderPagination(totalPages);
      }

      function renderPagination(totalPages) {
        let pagination = document.getElementById("pagination");
        pagination.innerHTML = "";

        for (let i = 1; i <= totalPages; i++) {
          let li = document.createElement("li");
          li.className = "page-item" + (i === currentPage ? " active" : "");
          let a = document.createElement("a");
          a.className = "page-link";
          a.href = "#";
          a.innerText = i;
          a.onclick = function (e) {
            e.preventDefault();
            currentPage = i;
            filterTable();
          };
          li.appendChild(a);
          pagination.appendChild(li);
        }
      }

      // M·ªü modal s·ª≠a b·ªô ph·∫≠n
      function openEditModalFromBtn(btn) {
        document.getElementById("editId").value = btn.dataset.id;
        document.getElementById("editName").value = btn.dataset.name;
        document.getElementById("editDescription").value =
          btn.dataset.description || "";
        document.getElementById("editForm").action =
          "/departments/update/" + btn.dataset.id;
        new bootstrap.Modal(document.getElementById("editModal")).show();
      }

      window.onload = function () {
        originalRows = Array.from(
          document.querySelectorAll("#deptBody tr")
        ).filter((r) => r.querySelector("td"));
        filterTable();
      };
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
